<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/review_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/review_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write a review..."
            android:inputType="text"
            android:maxLines="4"
            android:maxLength="200"
            />
    </android.support.design.widget.TextInputLayout>

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/review_text_layout"/>


    <Button
        android:id="@+id/button_submit_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rating_bar"
        android:text="Submit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Reviews"
        android:id="@+id/title_reviews"
        android:textSize="25sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/white_opaque"
        android:padding="4dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_below="@+id/button_submit_review"/>


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_reviews"
        android:padding="10dp"
        android:id="@+id/menu_fragment_recycler_view"
        android:paddingTop="48dp"/>



</RelativeLayout>