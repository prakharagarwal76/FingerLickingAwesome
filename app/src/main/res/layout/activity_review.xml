<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    app:umanoFadeColor="@color/black85"
    app:umanoOverlay="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <fragment
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/fragment_review"
        android:name="com.example.prakharagarwal.fingerlickingawesome.ReviewActivityFragment"
        android:gravity="center"
        tools:layout="@layout/fragment_review"
        layout="@layout/fragment_review" />

    <fragment
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="500dp"
        android:layout_width="match_parent"
        android:id="@+id/fragment_2"
        android:name="com.example.prakharagarwal.fingerlickingawesome.MenuFragment"
        android:gravity="center|top"
        tools:layout="@layout/fragment_menu"
        layout="@layout/fragment_menu" />

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
