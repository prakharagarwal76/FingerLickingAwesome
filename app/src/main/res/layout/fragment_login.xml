<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prakharagarwal.binge.SignUpFragment">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/fsu_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/fsu_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Mobile Number"
            android:inputType="phone"
            android:maxLines="1"
            android:maxLength="10"
            />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/fsu_password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/fsu_number_layout"
        app:passwordToggleEnabled="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/fsu_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            />


    </android.support.design.widget.TextInputLayout>


    <CheckBox
        android:id="@+id/fsu_show_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Password"
        android:layout_below="@+id/fsu_password_layout"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-3dp"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:id="@+id/thirdPartyBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="3dp"
        android:layout_below="@+id/fsu_show_password"
        android:layout_marginRight="3dp"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

            <!--<include-->
            <!--android:id="@+id/fsu_facebook"-->
            <!--layout="@layout/facebook_login_button"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginRight="@dimen/margin_5"-->
            <!--android:layout_weight="0.5"/>-->


            <!--<include-->
            <!--android:id="@+id/fsu_google"-->
            <!--layout="@layout/google_login_button"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="0.5"-->
            <!--android:layout_marginLeft="@dimen/margin_5"-->
            <!--android:layout_height="match_parent"-->
            <!--/>-->
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/thirdPartyBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="New to Binge? "
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/fsu_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:text="Sign Up"
            android:textSize="16sp"/>
    </LinearLayout>


</RelativeLayout>

